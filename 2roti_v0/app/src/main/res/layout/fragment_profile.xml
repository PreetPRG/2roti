<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragments.ProfileFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutHead"
            android:background="#5CC09F"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/image_view"
                android:background="@drawable/ic_boy"
                android:layout_centerInParent="true"
                android:layout_width="90dp"
                android:layout_height="90dp"/>

            <EditText
                android:hint="Enter Name"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/image_view"
                android:enabled="true"
                android:id="@+id/edit_text_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_below="@id/layoutHead"
            android:layout_width="360dp"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_gravity="top"
                android:drawablePadding="16dp"
                android:drawableLeft="@drawable/ic_phone"
                tools:text="+917549161079"
                android:enabled="true"
                android:id="@+id/text_phone"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<!--                <ImageView-->
<!--                    android:id="@+id/flag_image"-->
<!--                    android:layout_width="140dp"-->
<!--                    android:layout_height="120dp"-->
<!--                    android:layout_marginTop="20dp"-->
<!--                    android:background="@mipmap/ic_launcher"-->
<!--                    android:layout_marginLeft="20dp" />-->


                <Button
                    android:id="@+id/pickCountry"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="Pick Country"
                    />

                <TextView
                    android:id="@+id/countryNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="50dp"
                    android:text="Country"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />


                <Button
                    android:id="@+id/pickState"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Pick State"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="20dp"
                    />


                <TextView
                    android:id="@+id/state_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="State"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:layout_marginLeft="180dp"
                    />

                <Button
                    android:id="@+id/pick_city"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="20dp"
                    android:text="Pick City"
                    />

                <TextView
                    android:id="@+id/city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="180dp"
                    android:text="City"
                    android:textSize="20dp"
                    />
            </RelativeLayout>
            <ProgressBar
                android:id="@+id/progressbar"
                android:visibility="invisible"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/button_save"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/white"
                android:background="?colorPrimary"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:text="Save Changes"
                android:layout_width="140dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>