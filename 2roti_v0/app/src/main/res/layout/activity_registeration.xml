<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterationActivity">

    <RelativeLayout
        android:id="@+id/layoutHead"
        android:background="#5CC09F"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/image_view"
            android:background="@drawable/ic_boy"
            android:layout_centerInParent="true"
            android:layout_width="90dp"
            android:layout_height="90dp"/>

        <TextView
            android:text="Welcome User"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/image_view"
            android:enabled="true"
            android:id="@+id/edit_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_name"
        android:layout_below="@+id/layoutHead"
        android:padding="16dp">
        <TextView
            android:labelFor="@id/text_email"
            android:text="Name"
            android:fontFamily="sans-serif-light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/text_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:layout_marginBottom="10dp"
            android:hint="Enter your Name"
            android:inputType="text"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">


            <ImageView
                android:id="@+id/flag_image"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/ic_launcher"
                android:layout_marginLeft="20dp" />


            <Button
                android:id="@+id/pickCountry"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="145dp"
                android:text="Pick Country"
                />

            <TextView
                android:id="@+id/countryNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="50dp"
                android:text="Country"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/countryCodeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="182dp"
                android:layout_marginTop="130dp"
                android:text="Country code"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/countryDialCodeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="182dp"
                android:layout_marginTop="150dp"
                android:text="Country Dial Code"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/countryCurrencyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="182dp"
                android:layout_marginTop="170dp"
                android:text="Corrency"
                android:textSize="15dp"
                />

            <Button
                android:id="@+id/pickState"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Pick State"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="20dp"
                />


            <TextView
                android:id="@+id/state_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:text="State"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginLeft="180dp"
                />

            <Button
                android:id="@+id/pick_city"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="20dp"
                android:text="Pick City"
                />

            <TextView
                android:id="@+id/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="180dp"
                android:text="City"
                android:textSize="20dp"
                />

        </RelativeLayout>



        <ProgressBar
            android:layout_gravity="center_horizontal"
            android:id="@+id/progressbar"
            android:visibility="invisible"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/button_save"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:background="?colorPrimaryDark"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:text="Submit"
            android:layout_width="140dp"
            android:layout_height="wrap_content"/>



    </LinearLayout>


</RelativeLayout>